@page
@model frontend.Pages.Admin.AddProductModel

<h2>Add Product</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <div class="mb-3">
        <label>Product Name</label>
        <input class="form-control" asp-for="Name" required />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" required />
    </div>

    <div class="mb-3">
        <label>Stock Quantity</label>
        <input class="form-control" asp-for="StockQty" type="number" required />
    </div>

    <button type="submit" class="btn btn-success w-100">
        Add Product
    </button>
</form>
