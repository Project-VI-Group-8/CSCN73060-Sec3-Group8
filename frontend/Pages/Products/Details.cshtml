@* Product details page - shows detailed information about a single product *@
@page "{id:int}"
@model frontend.Pages.Products.DetailsModel

@if (Model.Product == null)
{
    <h3>Product not found.</h3>
}
else
{
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/products/product_@(Model.Product.id).jpg"
                 onerror="this.src='/images/products/default.jpg'"
                 class="img-fluid rounded shadow-sm" />

        </div>

        <div class="col-md-7">
            <h2>@Model.Product.name</h2>
            <h4 class="text-success">$@Model.Product.price</h4>
            <p class="text-muted">Stock Available: @Model.Product.stockQty</p>

            <form method="post">
                <input type="hidden" name="id" value="@Model.Product.id" />
                <input type="hidden" name="name" value="@Model.Product.name" />
                <input type="hidden" name="price" value="@Model.Product.price" />

                <button type="submit"
                        asp-page-handler="AddToCart"
                        class="btn btn-primary">
                    Add to Cart
                </button>

                <a asp-page="/Products/Index" class="btn btn-outline-dark ms-2">
                    Back
                </a>
            </form>

            <a asp-page="/Products/Index" class="btn btn-outline-dark ms-2">
                Back
            </a>
        </div>
    </div>
}

