@* Product details page - shows detailed information about a single product *@
@page "{id:int}"
@model frontend.Pages.Products.DetailsModel

@if (Model.Product == null)
{
    <h3>Product not found.</h3>
}
else
{
    <div class="row">
        <div class="col-md-5">
            @if (Model.Product.hasImage)
            {
                <img src="/api/proxy/image/@(Model.Product.id)"
                     loading="lazy"
                     class="img-fluid rounded shadow-sm"
                     alt="@Model.Product.name" />
            }
            else
            {
                <img src="/images/products/default.jpg"
                     class="img-fluid rounded shadow-sm"
                     alt="@Model.Product.name" />
            }

        </div>

        <div class="col-md-7">
            <h2>@Model.Product.name</h2>
            <h4 class="text-success">$@Model.Product.price</h4>
            <p class="text-muted">Stock Available: @Model.Product.stockQty</p>

            <form method="post" class="d-flex align-items-center gap-2 mt-3">
                <input type="hidden" name="id" value="@Model.Product.id" />
                <input type="hidden" name="name" value="@Model.Product.name" />
                <input type="hidden" name="price" value="@Model.Product.price" />

                <label class="form-label mb-0 fw-semibold">Qty:</label>
                <input type="number" name="quantity" value="1" min="1"
                       max="@Model.Product.stockQty" class="form-control" style="width:80px;" />

                <button type="submit"
                        asp-page-handler="AddToCart"
                        class="btn btn-primary">
                    Add to Cart
                </button>

                <a asp-page="/Products/Index" class="btn btn-outline-dark ms-2">
                    Back
                </a>
            </form>
        </div>
    </div>
}

