@page
@model frontend.Pages.AdminAuth.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-3 text-center fw-bold">Admin Login</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="card shadow-sm p-4">
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Username</label>
                <input class="form-control" asp-for="Username" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input class="form-control" asp-for="Password" type="password" required />
            </div>

            <button class="btn btn-primary w-100">Login</button>
        </form>
    </div>

    <div class="text-center mt-3">
        <a asp-page="/Account/Login" class="text-muted">&larr; Back to Account</a>
    </div>
</div>
