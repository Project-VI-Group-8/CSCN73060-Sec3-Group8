@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VelocityRetail</title>

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">

            <!-- Logo & Brand -->
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/images/logo.jpg" alt="Logo" />
                VelocityRetail
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto gap-2">

                    <li class="nav-item">
                        <a class="nav-link @(currentPage == "/Index" ? "active" : "")" asp-page="/Index">
                            Home
                        </a>


                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentPage != null && currentPage.StartsWith("/Products") ? "active" : "")"
                           asp-page="/Products/Index">
                            Products
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentPage != null && currentPage.StartsWith("/Cart") ? "active" : "")"
                           asp-page="/Cart/Index">
                            Cart
                        </a>
                    </li>

                    @using Microsoft.AspNetCore.Http

                    @if (Context.Session.GetString("IsAdmin") == "true")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold @(currentPage != null && currentPage.StartsWith("/Admin") ? "active" : "")"
                               asp-page="/AdminAuth/Login">
                                Admin
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-page="/AdminAuth/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-page="/AdminAuth/Login">Admin Login</a>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN BODY -->
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2026 - VelocityRetail
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

