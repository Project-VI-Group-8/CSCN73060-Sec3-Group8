@* Checkout page - collect shipping and payment information to complete order *@
@page
@model frontend.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4">Checkout</h2>

    <div class="card shadow-sm p-4">
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Full Name</label>
                <input type="text" class="form-control" asp-for="CustomerName" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" class="form-control" asp-for="CustomerEmail" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Shipping Address</label>
                <textarea class="form-control" asp-for="CustomerAddress" rows="3" required></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-secondary" asp-page="/Cart/Index">Back to Cart</a>
                <button type="submit" class="btn btn-primary px-4">Place Order</button>
            </div>
        </form>
    </div>
</div>
<a class="btn btn-success mt-3" asp-page="/Checkout/Index">
    Proceed to Checkout
</a>
