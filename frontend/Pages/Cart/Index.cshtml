@* Shopping cart page - displays items added to cart and allows quantity updates *@
@page
@model frontend.Pages.Cart.IndexModel

<h2 class="mb-4">Your Cart</h2>

@if (!Model.CartItems.Any())
{
    <div class="alert alert-warning">
        Your cart is empty.
    </div>

    <a asp-page="/Products/Index" class="btn btn-dark">Continue Shopping</a>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th style="width:120px;">Qty</th>
                <th>Total</th>
                <th style="width:120px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>$@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Price * item.Quantity)</td>
                    <td>
                        <form method="post">
                            <button class="btn btn-danger btn-sm"
                                    asp-page-handler="Remove"
                                    asp-route-id="@item.ProductId">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-3">Grand Total: <span class="text-success">$@Model.GetTotal()</span></h4>

    <div class="mt-4">
        <a asp-page="/Checkout/Index" class="btn btn-success">Proceed to Checkout</a>

        <form method="post" class="d-inline">
            <button class="btn btn-outline-danger" asp-page-handler="Clear">
                Clear Cart
            </button>
        </form>
    </div>
}
