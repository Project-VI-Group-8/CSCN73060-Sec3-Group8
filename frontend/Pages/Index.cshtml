@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">

    <!-- Banner Section -->
    <div class="hero">
        <h1>Welcome to VelocityRetail</h1>
        <p>Your one-stop shop for modern fashion, accessories, and lifestyle products.</p>

        <a class="btn btn-light mt-3 px-4 fw-bold" asp-page="/Products/Index">
            Browse Products
        </a>
    </div>

    <!-- Featured Products -->
    <h2 class="fw-bold mb-3">Shop by Category</h2>

    <div class="row g-4 mb-5">

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                <h5 class="fw-bold">Electronics</h5>
                <p class="text-muted">Phones, laptops, gadgets</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                <h5 class="fw-bold">Fashion</h5>
                <p class="text-muted">Clothing and accessories</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                <h5 class="fw-bold">Home</h5>
                <p class="text-muted">Furniture and decor</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                <h5 class="fw-bold">Fitness</h5>
                <p class="text-muted">Gym & sports equipment</p>
            </div>
        </div>

    </div>


