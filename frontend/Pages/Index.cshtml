@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">

    <!-- Hero Banner -->
    <div class="hero">
        <h1>Welcome to VelocityRetail</h1>
        <p>Your one-stop shop for electronics, PC parts, and tech accessories.</p>

        <a class="btn btn-light mt-3 px-4 fw-bold" asp-page="/Products/Index">
            Browse Products
        </a>
    </div>

    <!-- Value Props -->
    <h2 class="fw-bold mb-3 mt-5">Why Shop With Us</h2>

    <div class="row g-4 mb-5">

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-4">
                <h5 class="fw-bold">Fast Shipping</h5>
                <p class="text-muted mb-0">Get your parts delivered quickly so you can start building sooner.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-4">
                <h5 class="fw-bold">Secure Checkout</h5>
                <p class="text-muted mb-0">Shop with confidence — your orders and payments are safe with us.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-4">
                <h5 class="fw-bold">Wide Selection</h5>
                <p class="text-muted mb-0">From GPUs to peripherals, find everything you need in one place.</p>
            </div>
        </div>

    </div>

</div>
